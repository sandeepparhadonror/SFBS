<%= simple_form_for @farmer, url: farmer_details_path do |f| %>

<%= f.error_notification %>

<div class="container">
	<div class="row">
		<div class="col col-6 col-sm-4 order-first">
			<%= f.input :first_name  %>
		</div>
		<div class="col col-6 col-sm-4">
			<%= f.input :middle_name %>
		</div>
		<div class="col col-6 col-sm-4 order-last">
			<%= f.input :last_name %>
		</div>
	</div>

	<div class="row">
		<div class="col col-6 col-sm-6">
			<%= f.input :phone_number %>
		</div>
		<div class="col col-6 col-sm-6">
			<%= f.input :transportation_vehicle %>
		</div>
	</div>

	<div class="row">
		<div class="col col-6 col-sm-6">
			<%= f.input :email %>
		</div>
		<div class="col col-6 col-sm-6">
			<%= f.input :address %>
		</div>
	</div>

</div>
<hr>

<div class="form-group row mb-0">
	<div class="col-sm-9 offset-sm-3">
		<%= f.button :submit, "Add Farmer",  class: "btn btn-success" %>
		<%= link_to "Cancel", farmer_details_path, type: "reset", class: "btn btn-primary" %>
	</div>
</div>
<% end %>
